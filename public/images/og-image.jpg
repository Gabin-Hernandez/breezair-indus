<?xml version="1.0" encoding="UTF-8"?>
<svg width="1200" height="630" viewBox="0 0 1200 630" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#004c97"/>
      <stop offset="50%" style="stop-color:#0066cc"/>
      <stop offset="100%" style="stop-color:#2f3a45"/>
    </linearGradient>
    <linearGradient id="textGradient" x1="0%" y1="0%" x2="100%" y2="0%">
      <stop offset="0%" style="stop-color:#ffffff"/>
      <stop offset="100%" style="stop-color:#e0f2fe"/>
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="630" fill="url(#bgGradient)"/>
  
  <!-- Pattern overlay -->
  <g opacity="0.1" stroke="white" fill="none">
    <circle cx="100" cy="100" r="50"/>
    <circle cx="300" cy="150" r="30"/>
    <circle cx="1100" cy="200" r="80"/>
    <circle cx="900" cy="500" r="40"/>
    <rect x="800" y="100" width="60" height="60" rx="10"/>
    <rect x="200" y="400" width="40" height="40" rx="5"/>
  </g>
  
  <!-- Main content -->
  <g transform="translate(60, 150)">
    <!-- Logo -->
    <circle cx="60" cy="60" r="50" fill="white"/>
    <text x="60" y="75" text-anchor="middle" fill="#004c97" font-family="Arial, sans-serif" font-size="48" font-weight="bold">B</text>
    
    <!-- Main title -->
    <text x="140" y="50" fill="url(#textGradient)" font-family="Arial, sans-serif" font-size="64" font-weight="bold">
      Breezair Industrial
    </text>
    
    <!-- Subtitle -->
    <text x="140" y="90" fill="#b3e5fc" font-family="Arial, sans-serif" font-size="32" font-weight="normal">
      Enfriamiento Evaporativo Industrial
    </text>
    
    <!-- Features -->
    <g transform="translate(140, 140)">
      <!-- Feature 1 -->
      <g>
        <circle cx="15" cy="15" r="12" fill="#00dc82"/>
        <text x="15" y="20" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="14" font-weight="bold">✓</text>
        <text x="40" y="20" fill="white" font-family="Arial, sans-serif" font-size="24" font-weight="600">
          Ahorro energético hasta 87%
        </text>
      </g>
      
      <!-- Feature 2 -->
      <g transform="translate(0, 50)">
        <circle cx="15" cy="15" r="12" fill="#00dc82"/>
        <text x="15" y="20" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="14" font-weight="bold">✓</text>
        <text x="40" y="20" fill="white" font-family="Arial, sans-serif" font-size="24" font-weight="600">
          100% aire exterior filtrado
        </text>
      </g>
      
      <!-- Feature 3 -->
      <g transform="translate(0, 100)">
        <circle cx="15" cy="15" r="12" fill="#00dc82"/>
        <text x="15" y="20" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="14" font-weight="bold">✓</text>
        <text x="40" y="20" fill="white" font-family="Arial, sans-serif" font-size="24" font-weight="600">
          Ideal para naves industriales
        </text>
      </g>
    </g>
  </g>
  
  <!-- CG International branding -->
  <text x="60" y="580" fill="#b3e5fc" font-family="Arial, sans-serif" font-size="18" font-weight="normal">
    Powered by CG International | breezair-industrial.mx
  </text>
  
  <!-- Industrial equipment silhouette -->
  <g transform="translate(800, 200)" opacity="0.3" fill="white">
    <rect x="0" y="80" width="300" height="120" rx="10"/>
    <rect x="20" y="100" width="260" height="80" rx="5"/>
    <g stroke="white" stroke-width="3">
      <line x1="40" y1="120" x2="260" y2="120"/>
      <line x1="40" y1="130" x2="260" y2="130"/>
      <line x1="40" y1="140" x2="260" y2="140"/>
      <line x1="40" y1="150" x2="260" y2="150"/>
      <line x1="40" y1="160" x2="260" y2="160"/>
    </g>
  </g>
</svg>